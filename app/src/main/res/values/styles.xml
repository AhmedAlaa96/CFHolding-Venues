<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/toolbar_title_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="primaryBtn" parent="TextAppearance.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_primary_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="secondaryBtn" parent="TextAppearance.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <dimen name="toolbar_title_size">17dp</dimen>
</resources>